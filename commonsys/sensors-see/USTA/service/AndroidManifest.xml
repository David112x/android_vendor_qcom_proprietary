<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    coreApp="true"
    package="com.qualcomm.qti.ustaservice"
    android:sharedUserId="android.uid.system"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application android:directBootAware="true" android:persistent="true">

        <receiver android:name="USATAServiceAutoBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name=".USTAServiceImpl"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.qualcomm.qti.ustaservice.USTAServiceImpl" />
            </intent-filter>
        </service>
    </application>
</manifest>
