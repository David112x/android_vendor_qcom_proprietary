<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/controlsBackground"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/controlsHeaderBackground"
        android:paddingTop="@dimen/controls_padding"
        android:paddingBottom="@dimen/controls_padding"
        android:scrollbars="none">

        <com.qualcomm.qti.mmca.view.chip.RadioChipGroup
            android:id="@+id/control_chip_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </HorizontalScrollView>

    <com.qualcomm.qti.mmca.vppp.ui.NoScrollViewPager
        android:id="@+id/controls_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" />

</LinearLayout>
